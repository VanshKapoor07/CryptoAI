<div class="mt-10 max-w-lg mx-auto bg-gray-800 p-6 rounded-2xl shadow-lg border border-gray-700">
    <h3 class="text-3xl font-bold text-purple-400 text-center mb-5">Host an Event</h3>
    
    <form method="post" action="/initialize_organizer_data">
        <input type = "hidden" id="name" name="name" value="<%=locals.name || '' %>"
            class="w-full p-3 border border-gray-600 rounded-lg bg-gray-700 text-white mb-3 focus:outline-none focus:ring-2 focus:ring-purple-500">
        <input type = "text" placeholder="Event Name" name="Event_Name" class = "w-full p-3 border border-gray-600 rounded-lg bg-gray-700 text-white mb-3 focus:outline-none focus:ring-2 focus:ring-purple-500">
        <input type="date" name="Date"
            class="w-full p-3 border border-gray-600 rounded-lg bg-gray-700 text-white mb-3 focus:outline-none focus:ring-2 focus:ring-purple-500">
        
            <input id="category" name="Event_Category" type="text" placeholder="Event Category" 
            class="w-full p-3 border border-gray-600 rounded-lg bg-gray-700 text-white mb-3 focus:outline-none focus:ring-2 focus:ring-purple-500">
        
        <textarea name= "About_Event" placeholder="Event Details" 
            class="w-full p-3 border border-gray-600 rounded-lg bg-gray-700 text-white mb-3 focus:outline-none focus:ring-2 focus:ring-purple-500"></textarea>
        
        <input type="text" name="Venue" placeholder="Venue of the Event" 
            class="w-full p-3 border border-gray-600 rounded-lg bg-gray-700 text-white mb-3 focus:outline-none focus:ring-2 focus:ring-purple-500">
        
        <h4 class="text-xl font-bold text-purple-300 mb-2">Starting Time for the Event</h4>
        <input type="time" name="Start_Time"
            class="w-full p-3 border border-gray-600 rounded-lg bg-gray-700 text-white mb-3 focus:outline-none focus:ring-2 focus:ring-purple-500">
        
        <h4 class="text-xl font-bold text-purple-300 mb-2">Ending Time for the Event</h4>
        <input type="time" name="End_Time"
            class="w-full p-3 border border-gray-600 rounded-lg bg-gray-700 text-white mb-3 focus:outline-none focus:ring-2 focus:ring-purple-500">
        
        <h3 class="text-xl font-bold text-purple-300 mb-3">Ticket Prices</h3>
        <ul class="bg-gray-700 p-4 rounded-xl shadow-md border border-gray-600">
            <li class="flex items-center justify-between mb-3">
                <span class="text-white font-semibold">Platinum Category</span>
                <input id="unit_price_A" name="unit_price_A" type="number" 
                    class="w-24 p-2 border border-gray-500 rounded-lg bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-purple-500" 
                    placeholder="in (APT)">
            </li>

            <li class="flex items-center justify-between mb-3">
                <span class="text-white font-semibold">Gold Category</span>
                <input id="unit_price_B" name="unit_price_B" type="number" 
                    class="w-24 p-2 border border-gray-500 rounded-lg bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-purple-500" 
                    placeholder="in (APT)">
            </li>

            <li class="flex items-center justify-between">
                <span class="text-white font-semibold">Silver Category</span>
