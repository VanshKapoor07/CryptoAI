<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StellarBot</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <script>
        async function submitQuestion() {
            const questionInput = document.getElementById("questionInput").value;
            const answerDiv = document.getElementById("answerDiv");
            
            const response = await fetch("http://localhost:5000/askques", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ question: questionInput })
            });
            
            const data = await response.json();
            answerDiv.innerText = data.answer;
        }
    </script>
</head>
<body class="bg-gray-900 text-white">
    <div class="container-fluid min-h-screen flex">
        <!-- Sidebar -->
        <div class="w-1/3 bg-gray-800 p-6">
            <h2 class="text-xl font-bold mb-4">Questions</h2>
            <input id="questionInput" type="text" class="w-full p-2 rounded bg-gray-700 border border-gray-600 mt-2" placeholder="Ask me anything">
            <button onclick="submitQuestion()" class="mt-4 w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600">Submit</button>
            <img class="mt-10"src="https://thumbs.dreamstime.com/b/chatbot-illustration-black-background-d-rendering-102786004.jpg" alt="chatbot">
            </div>
        
        <!-- Main Content -->
        <div class="w-2/3 p-10">
            <h1 class="text-3xl font-bold">StellarBot: Your Doubt Buddy</h1>
            <label class="block mt-6 text-lg font-semibold">Answer:</label>
            <div id="answerDiv" class="w-full p-4 rounded bg-gray-700 border border-gray-600 mt-2"></div>
        </div>
    </div>
</body>
</html>
